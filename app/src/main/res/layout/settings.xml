<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_view"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="1dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/profile_imageView"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_profile"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Stuart Horner"
                android:id="@+id/profile_name"
                android:layout_toRightOf="@id/profile_imageView"
                android:layout_toEndOf="@+id/profile_imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentBottom="false"
                android:textSize="@dimen/abc_text_size_headline_material"
                android:textColor="@color/text" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/profile_subtitle"
                android:layout_height="wrap_content"
                android:text="View my profile"
                android:layout_below="@+id/profile_name"
                android:layout_alignLeft="@+id/profile_name"
                android:layout_alignStart="@+id/profile_name"
                android:textStyle="italic" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_marginTop="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="1dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Completed Buck Its"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/accent_color_dark"
                android:id="@+id/profile_comp"
                android:textSize="20sp" />

            <ExpandableListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_expandableListView"
                android:layout_below="@id/profile_comp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="1dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Search Settings"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="@color/accent_color_dark"
                android:id="@+id/textView"
                android:textSize="20sp" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignBottom="@+id/textView2" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discoverable"
                android:id="@+id/switch1"
                android:layout_below="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/text"
                android:padding="8dp"
                android:checked="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age Preference"
                android:id="@+id/textView2"
                android:padding="8dp"
                android:layout_below="@+id/switch1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/text" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardCornerRadius="1dp"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Settings"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="8dp"
                android:textColor="@color/accent_color_dark"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Matches"
                android:id="@+id/setting_new_matches"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/text"
                android:checked="true"
                android:layout_below="@+id/textView3"
                android:padding="8dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:id="@+id/setting_messages"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/text"
                android:layout_below="@+id/setting_new_matches"
                android:checked="true"
                android:padding="8dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Likes and Adds"
                android:id="@+id/setting_like_add"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textColor="@color/text"
                android:layout_below="@+id/setting_messages"
                android:checked="true"
                android:padding="8dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/setting_logout"
        android:textColor="@color/text_light"
        android:background="@android:color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:id="@+id/setting_delete"
        android:textColor="@color/text_light"
        android:background="@android:color/white"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="8dp"
        />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
