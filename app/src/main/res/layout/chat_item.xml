<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="8dp">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/chat_icon"
        android:scaleType="fitXY"
        android:src="@drawable/ic_profile"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_name"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@id/chat_icon"
        android:layout_toRightOf="@id/chat_icon"
        android:textColor="@android:color/black"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chat_subtitle"
        android:maxLines="2"
        android:layout_below="@id/chat_name"
        android:layout_alignStart="@id/chat_name"
        android:textStyle="italic"
        android:textColor="@color/text_light"
        android:layout_alignLeft="@id/chat_name" />

</RelativeLayout>
